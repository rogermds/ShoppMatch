<%- include('./partials/header') %>

    <main class='edicao-principal'>
        <div class='edicao-perfil'>
            <form method="POST" action="/usuario/perfil/editar?_method=PUT" enctype="multipart/form-data">
                <div class='upload'>
                    <% if (sessao.user.avatar) { %>
                        <img src="<%= sessao.user.avatar.substr(8,500) %>" alt="avatar profile">
                        <% } else { %>
                            <img src="/images/edicao-perfil/uploadperfil.png" alt="">
                            <% } %>
                                <input type='file' name='avatar' id='file' multiple>
                </div>
                <div class='campo'>
                    <label for="nome">Nome:</label>
                    <input type="text" id='nome' name='nome' value="<%= sessao.user.nome %>">
                </div>
                <div class='campo'>
                    <label for="complemento">Apelido:</label>
                    <input type="text" id='apelido' name='apelido' value="<%= sessao.user.apelido %>">
                </div>
                <div class='campo'>
                    <label for="cpf">CPF:</label>
                    <input type="text" id='cpf' name='cpf' value="<%= sessao.user.cpf %>">
                </div>
                <div class='campo'>
                    <label for="nascimento">Data de nascimento:</label>
                    <input type="date" id='nascimento' name='nascimento' value="<%= sessao.user.nascimento %>">
                </div>
                <div class='campo'>
                    <label for="telefone">Telefone:</label>
                    <input type="tel" id='telefone' maxlength='11' name='telefone'
                        placeholder="DDD + Número sem traços ou espaços" value="<%= sessao.user.telefone %>">
                </div>
                <div class='campo'>
                    <label for="genero">Genêro:</label>
                    <input type="text" id='genero' name='genero' value="<%= sessao.user.genero %>">
                </div>
                <div class='campo'>
                    <label for="cep">CEP:</label>
                    <input type="number" id='cep' maxlength='11' name='cep' value="<%= sessao.user.cep %>">
                </div>
                <div class='campo'>
                    <label for="endereco">Endereço:</label>
                    <input type="text" id='endereco' name='endereco' value="<%= sessao.user.endereco %>">
                </div>
                <div class='campo'>
                    <label for="cep">Número:</label>
                    <input type="text" id='numero' name='numero' value="<%= sessao.user.numero %>">
                </div>
                <div class='campo'>
                    <label for="estado">Estado:</label>
                    <input type="text" id='estado' name='estado' value="<%= sessao.user.estado %>">
                </div>
                <div class='campo'>
                    <label for="cidade">Cidade:</label>
                    <input type="text" id='cidade' name='cidade' value="<%= sessao.user.cidade %>">
                </div>
                <div class='campo'>
                    <label for="senha">Alterar senha:</label>
                    <input type="password" id='senha' name='senha' placeholder="Pelo menos 6 dígitos" required>
                </div>
                <div class='campo'>
                    <label for="email">Alterar e-mail:</label>
                    <input type="email" id='email' name='email' value="<%= sessao.user.email %>">
                </div>
                <div class='campo'>
                    <label for="confirmarsenha">Digite novamente a sua senha:</label>
                    <input type="password" id='confirmarsenha' name='confirmarsenha' placeholder="Pelo menos 6 dígitos"
                        required>
                </div>
                <div class='novidades'>
                    <p>Deseja receber promoções e novidades regularmente?</p>
                    <input type="checkbox">
                </div>
                <div class='submit'>
                    <button type="submit">Salvar alterações</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('./partials/footer') %>